# Application Settings
APP_NAME=Haniphei.ai API
APP_VERSION=1.0.0
DEBUG=False

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/haniphei

# JWT Authentication
JWT_SECRET=your-super-secret-key-change-this-in-production-min-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI Service
AI_SERVICE_URL=http://localhost:8082

# S3/R2 Storage Configuration
# For AWS S3, leave S3_ENDPOINT_URL empty
# For Cloudflare R2, set S3_ENDPOINT_URL to: https://YOUR_ACCOUNT_ID.r2.cloudflarestorage.com
S3_ENDPOINT_URL=
S3_ACCESS_KEY_ID=your-access-key-id
S3_SECRET_ACCESS_KEY=your-secret-access-key
S3_BUCKET_NAME=haniphei-documents
S3_REGION=auto

# File Upload Configuration (in bytes)
MAX_FILE_SIZE=10485760

# CORS Origins (comma-separated)
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]
